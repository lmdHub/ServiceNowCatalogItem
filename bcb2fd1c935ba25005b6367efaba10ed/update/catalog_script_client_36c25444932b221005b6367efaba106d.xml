        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    // Remove all non-numeric characters
    var digits = newValue.replace(/\D/g, '');

    // Only format if at least 10 digits are entered

	
	if( digits.length === 0){
		return;
	}

    else if (digits.length === 10) {
        var formatted = "(" + digits.substring(0, 3) + ") " + digits.substring(3, 6) + "-" + digits.substring(6, 10);
        g_form.setValue('phone_num', formatted);}
   
	
	  else {
		var message = 'Please enter a 10 digit phone numer! ex: (123)456-7890';
        g_form.showFieldMsg('phone_num', message, 'error');
    }
}
]]></script>
